<% provide(:title , @patient.name) %>
<div class="row", style="margin-top:50px;">
  <div class="col-sm-10">
    <h1 class="username"><%= @patient.name %></h1>
  </div>
  <div class="col-sm-2">
	<%= image_tag @patient.avatar.url(:thumb), class:"pull-right" %>
  </div>
</div>
<div class="row", style="padding-top:20px;">
  <div class="col-sm-3">
	<ul class="list-group">
	  <li class="list-group-item text-muted">
		Profile
	  </li>
	  <li class="list-group-item text-right">
		<span class="pull-left">
		  <strong>Registered</strong>
	 	</span>
		<%= @patient.created_at.strftime("%d %b. %Y") %>
	  </li>
	  <li class="list-group-item text-right">
		<span class="pull-left">
		  <strong>Gender</strong>
	 	</span>
		<%= @patient.sex %>
	  </li>
	   <li class="list-group-item text-right">
		<span class="pull-left">
		  <strong>Occupation</strong>
	 	</span>
		<%= @patient.occupation %>
	  </li>
	   <li class="list-group-item text-right">
		<span class="pull-left">
		  <strong>Height</strong>
	 	</span>
		<%= @patient.Height %>
	  </li>
	   <li class="list-group-item text-right">
		<span class="pull-left">
		  <strong>Weight</strong>
	 	</span>
		<%= @patient.Weight %>
	  </li>
	</ul>
	<div class="panel panel-default">
	  <div class="panel-heading">
		Actions
	  </div>
	  <div class="panel-body">
		<%= link_to "Add Visit", new_patient_visit_path(@patient) %>
	  </div>
	  <div class="panel-body">
		<%= link_to "Add PDAD", '#' %>
	  </div>
	  <div class="panel-body">
    	<%= link_to "Add Complaints", '#' %>
	  </div>
	</div>
  </div>
  <div class="col-sm-9">
	<ul id="myTab" class="nav nav-tabs">
	  <li class="active">
		<a data-toggle="tab" href="#">MOTMOT</a>
	  </li>
	</ul>
	<div class="tab-content">
	  <div id="home" class="tab-pane active">
	  </div>
  </div>
</div>
